pipeline {
    agent any
	tools {
      terraform 'terraform'
    }
    stages {
        stage('Checkout'){
			steps {
				script {
					git branch: 'jira-54-write-terraform-module-for-the-database-instance-and-infrastructure', credentialsId: 'gitcreds', url: 'git@github.com:CapybaraDevOps/geocit-infrastructure.git'
				}
			}
		}
        stage('Init and Plan'){
			steps {
			    withCredentials([file(credentialsId: 'terraform_creds', variable: 'GOOGLE_CREDENTIALS')]) {
			        sh 'terraform init'
				    sh 'terraform plan -no-color'
			    }
			}
		}
		stage('Validation'){
			input {
				message "Do you want to approve this plan?"
				ok "Approve this plan"
			}
			steps {
			    echo "Approval accepted"
			}
		}
		stage('Approve'){
			steps {
			    withCredentials([file(credentialsId: 'terraform_creds', variable: 'GOOGLE_CREDENTIALS')]) {
				    sh 'terraform apply -auto-approve -no-color'
			    }
			}
		}
		stage('IP Output'){
			steps {
				script {
                    def ips = sh(script: 'terraform output -json', returnStdout: true).trim()
                    writeFile file: '/var/lib/jenkins/hostaddresses', text: ips
                }
			}
		}
    }
    post {
        always {
            cleanWs()
        }
    }
}